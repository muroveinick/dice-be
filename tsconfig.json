{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "baseUrl": "./",
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@shared/*": ["dice-shared/*"]
    }
  },
  "include": ["./**/*.ts", "./environment.d.ts"],
  "exclude": ["node_modules"]
}
